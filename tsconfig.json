{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "@types/jest"]
  },
  "include": ["**/src/**/*"],
  "exclude": ["**/node_modules", "./client"]
}
